<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ConfirmObservationStatusActivity">

    <TextView
        android:id="@+id/text_confirm_periodic_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:textAlignment="textStart"
        android:layout_gravity="center"
        android:inputType="textMultiLine"
        android:text="@string/text_observation_user_confirm_message"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button_confirm_periodic_location"
        android:layout_width="203dp"
        android:layout_height="66dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape"
        android:fadingEdge="horizontal|vertical"
        android:text="@string/button_confirm_location" />

    <TextView
        android:id="@+id/text_warning_error_outside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="@string/text_observation_warning_error"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>