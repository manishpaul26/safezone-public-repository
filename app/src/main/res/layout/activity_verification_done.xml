<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerificationDoneActivity">



    <TextView
        android:id="@+id/text_verifying_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Verifying your photo."
        android:textSize="25dp"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        android:id="@+id/progressBar_verifying_photo"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_marginTop="100dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/image_icon_tick_verification_success"
        android:src="@drawable/green_check_mark_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/text_thank_you"
        android:layout_below="@id/image_icon_tick_verification_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_weight="1"
        android:text="@string/text_thank_you_verification" />


</RelativeLayout>