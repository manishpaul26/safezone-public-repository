<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CameraUploadFirstImageActivity">


    <ImageView
        android:id="@+id/image_camera_placeholder_icon"
        android:src="@drawable/ic_camera"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/image_initial_upload"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginLeft="30dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:gravity="center_vertical"
        android:id="@+id/button_retake_image"
        android:layout_below="@id/image_initial_upload"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_refresh"
        android:visibility="invisible"
        android:layout_weight="1"
        android:text="TextView" />

    <ImageView
        android:gravity="center_vertical"
        android:id="@+id/button_confirm_image"
        android:layout_below="@id/image_initial_upload"
        android:layout_toRightOf="@id/button_retake_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_check"
        android:visibility="invisible"
        android:layout_weight="1"
        android:text="TextView" />


    <Button
        android:gravity="center_vertical"
        android:id="@+id/button_upload_image"
        android:layout_below="@id/image_initial_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_shape"
        android:layout_weight="1"
        android:text="@string/button_open_camera" />
</RelativeLayout>